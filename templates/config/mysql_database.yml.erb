defaults: &defaults
  adapter: mysql2
  encoding: utf8
  pool: 5
  username: root
  password:
  socket: /tmp/mysql.sock

development:
  <<: *defaults
  database: <%= app_name %>_development

test:
  <<: *defaults
  database: <%= app_name %>_test

production:
  <<: *defaults
  url:  <%%= ENV['DATABASE_URL'] %>